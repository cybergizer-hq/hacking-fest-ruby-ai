<% unless flash.nil? || flash.count == 0 %>
  <% flash.each do |name, msg| %>
    <% if msg.class == Array %>
      <% msg.each do |message| %>
        <%= content_tag :div, :id => "flash_#{name}", class: "alert alert-#{name} alert-dismissible", role: 'alert' do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= message %>
        <% end %>
      <% end %>
    <% else %>
      <%= content_tag :div, :id => "flash_#{name}", class: "alert alert-#{name} alert-dismissible", role: 'alert' do %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= sanitize(msg, tags: %w[a strong em]) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
